<h1>Welcome to Lynn's Movie App!</h1>

<p>Please check out the catalogue of movies:</p>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Year Released</th>
		</tr>
	</thead>
	<tbody>
		<% @movies.each do |movie| %>
		<tr>  
		    <td><%= movie.title %></td>
	        <td><%= movie.description %></td>
	        <td><%= movie.year_released %></td>
	        <td><%= link_to 'Show', show_path %></td>
	    </tr> 
		<% end %>
	</tbody>
</table>